<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

  <ScrollView

      android:layout_width="match_parent"
      android:layout_height="match_parent"


      >
    <cn.com.magicabc.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_heightPercent="306%w"
    app:layout_widthPercent="100%w"
    android:src="@drawable/back_work"
android:scaleType="fitXY"
    />
  <android.support.design.widget.AppBarLayout

      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      app:elevation="0dp"
      >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:visibility="gone"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />


  </android.support.design.widget.AppBarLayout>





<ImageView
    android:id="@+id/iv1"
    android:layout_width="@dimen/xdp_52"
    android:layout_height="@dimen/xdp_44"
    android:src="@drawable/course_notice"
    app:layout_marginTopPercent="19%w"
android:layout_centerHorizontal="true"
    />

      <ImageView
          app:layout_marginTopPercent="45%w"
          app:layout_marginLeftPercent="50%w"
          android:id="@+id/iv2"
          android:layout_width="@dimen/xdp_52"
          android:layout_height="@dimen/xdp_44"
          android:src="@drawable/iv_word_you"


          />
      <ImageView
          app:layout_marginTopPercent="72%w"
          app:layout_marginLeftPercent="45%w"
          android:id="@+id/iv3"
          android:layout_width="@dimen/xdp_52"
          android:layout_height="@dimen/xdp_44"
          android:src="@drawable/iv_testword_you"


          /> <ImageView
          app:layout_marginTopPercent="95%w"
          app:layout_marginLeftPercent="24%w"
          android:id="@+id/iv4"
          android:layout_width="@dimen/xdp_52"
          android:layout_height="@dimen/xdp_44"
          android:src="@drawable/iv_inword_you"


          /> <ImageView
          app:layout_marginTopPercent="122%w"
          app:layout_marginLeftPercent="41%w"
          android:id="@+id/iv5"
          android:layout_width="@dimen/xdp_52"
          android:layout_height="@dimen/xdp_44"
          android:src="@drawable/iv_select_you"


          /> <ImageView
          app:layout_marginTopPercent="148%w"
          app:layout_marginLeftPercent="40%w"
          android:id="@+id/iv6"
          android:layout_width="@dimen/xdp_52"
          android:layout_height="@dimen/xdp_44"
          android:src="@drawable/iv_subvoice_you"


          /> <ImageView
          app:layout_marginTopPercent="175%w"
          app:layout_marginLeftPercent="34%w"
          android:id="@+id/iv7"
          android:layout_width="@dimen/xdp_52"
          android:layout_height="@dimen/xdp_44"
          android:src="@drawable/iv_flow_you"


          /> <ImageView
        app:layout_marginTopPercent="200%w"
        app:layout_marginLeftPercent="47%w"
          android:id="@+id/iv8"
          android:layout_width="@dimen/xdp_52"
          android:layout_height="@dimen/xdp_44"
          android:src="@drawable/iv_takeimg_you"


          /> <ImageView
          app:layout_marginTopPercent="230%w"
          app:layout_marginLeftPercent="35%w"
          android:id="@+id/iv9"
          android:layout_width="@dimen/xdp_52"
          android:layout_height="@dimen/xdp_44"
          android:src="@drawable/iv_video_you"


          /> <ImageView
          app:layout_marginTopPercent="260%w"
          app:layout_marginLeftPercent="49%w"
          android:id="@+id/iv10"
          android:layout_width="@dimen/xdp_52"
          android:layout_height="@dimen/xdp_44"
          android:src="@drawable/iv_baoan"


          />

    </cn.com.magicabc.widget.PercentRelativeLayout>
  </ScrollView>
  <LinearLayout
      android:paddingLeft="@dimen/xdp_15"
      android:paddingRight="@dimen/xdp_15"
      android:paddingBottom="@dimen/xdp_7"
      android:paddingTop="@dimen/xdp_7"
      android:background="@drawable/btn_background_work"
      android:layout_alignParentRight="true"
      android:orientation="horizontal"
      android:id="@+id/rl_bomtom"
      android:layout_marginBottom="@dimen/xdp_15"
      android:layout_alignParentBottom="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/xdp_15"

      >
    <ImageView
        android:id="@+id/iv_video"

        android:layout_width="@dimen/xdp_60"
        android:layout_height="@dimen/xdp_63"
        android:src="@drawable/videoplay"
        />
    <ImageView
android:layout_marginLeft="@dimen/xdp_12"
      android:id="@+id/iv_feed"
        android:layout_width="@dimen/xdp_60"
        android:layout_height="@dimen/xdp_63"
        android:src="@drawable/teacpher_feedback"
        />
    <ImageView
        android:id="@+id/iv_zuop"
        android:layout_marginLeft="@dimen/xdp_12"
        android:layout_width="@dimen/xdp_60"
        android:layout_height="@dimen/xdp_63"
        android:src="@drawable/teacpher_feedback"
        />


  </LinearLayout>
    <ImageView
        android:layout_marginTop="@dimen/xdp_26"
        android:layout_marginLeft="@dimen/xdp_15"
        android:id="@+id/iv_back"
        android:layout_width="@dimen/xdp_23"
        android:layout_height="@dimen/xdp_23"
        android:src="@drawable/back" />
</RelativeLayout>
