<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
                android:background="@drawable/background"
    android:fitsSystemWindows="true"

    >

  <android.support.design.widget.AppBarLayout
      android:visibility="gone"
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      app:elevation="0dp"
      >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:visibility="gone"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />


  </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:paddingTop="@dimen/xdp_43"
        android:background="@color/translucent"
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v7.widget.RecyclerView>

  <RelativeLayout
      android:background="@color/translucent"
      android:layout_marginLeft="@dimen/xdp_15"
      android:layout_marginRight="@dimen/xdp_15"
      android:layout_width="match_parent"
      android:layout_height="@dimen/xdp_43">
    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/iv_back"
        android:layout_width="@dimen/xdp_23"
        android:layout_height="@dimen/xdp_23"
        android:src="@drawable/back_bai" />
    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_down"
        android:layout_width="@dimen/xdp_44"
        android:text="更新"
        android:gravity="center"
        android:textSize="@dimen/xsp_14"
        android:textColor="@color/green"
        android:layout_height="@dimen/xdp_24"
        android:background="@drawable/btn_background_update" />

  </RelativeLayout>
</RelativeLayout>